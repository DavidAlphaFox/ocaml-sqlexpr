(jbuild_version 1)

(executable
 ((name         example_ppx)
  (modules      (example_ppx))
  (libraries    (sqlexpr oUnit))
  (preprocess   (pps (ppx_sqlexpr)))))

(executable
 ((name         t_ppx_parse)
  (modules      (t_ppx_parse))
  (libraries    (sqlexpr oUnit))
  (preprocess   (pps (ppx_sqlexpr)))))

(alias
 ((name runtest)
  (package ppx_sqlexpr)
  (action (run ${exe:t_ppx_parse.exe}))))

(executable
 ((name         t_ppx_sqlexpr)
  (modules      (t_ppx_sqlexpr))
  (libraries    (sqlexpr oUnit lwt))
  (preprocess   (pps (ppx_sqlexpr lwt.ppx)))))

(alias
 ((name runtest)
  (package ppx_sqlexpr)
  (action (run ${exe:t_ppx_sqlexpr.exe}))))
